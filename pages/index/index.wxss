.container{
  border-top:1rpx solid #e0e0e0;
}
.search{
  border: 1rpx solid #e0e0e0;
  margin: 20rpx;
  padding: 20rpx;
  border-radius: 5rpx;
  box-shadow: 0 0 10rpx #e0e0e0;
  display: flex;
  align-items: center;
}
.search image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.todos{
  border: 1rpx solid #e0e0e0;
  border-radius: 5rpx;
  box-shadow: 0 0 10rpx #e0e0e0;
  margin: 20rpx;
}
.todos .item{
  display: flex;
  padding: 20rpx;
  align-items: center;
  border-bottom:1rpx solid #e0e0e0;
}
.todos .item:last-child{
  border-bottom: 0;
}
.todos .item text{
  flex: 1;
  font-size: 30rpx;
  color: #444;
  margin-left: 20rpx;
}
.todos .item.completed text{
  color: #888;
  text-decoration: line-through;
}
.footer{
  font-size: 30rpx;
  margin: 20rpx;
  display: flex;
  justify-content: space-between;
  color: #333;
}
.happy{
  color: #e0e0e0
}